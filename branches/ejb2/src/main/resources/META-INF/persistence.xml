<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence                  http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="VozovnaPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>cz.muni.fi.pa165.vozovna.ejb.entity.ServiceInterval</class>
    <class>cz.muni.fi.pa165.vozovna.ejb.entity.Drive</class>
    <class>cz.muni.fi.pa165.vozovna.ejb.entity.User</class>
    <class>cz.muni.fi.pa165.vozovna.ejb.entity.Vehicle</class>
    <properties>
      <property name="hibernate.connection.username" value="app"/>
      <property name="hibernate.archive.autodetection" value="class, hbm"/>
      <property name="hibernate.connection.driver_class" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="hibernate.connection.password" value="ppa"/>
      <property name="hibernate.connection.url" value="jdbc:derby://localhost:1527/VozovnaDB"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
    </properties>
  </persistence-unit>
  <persistence-unit name="TestingPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>cz.muni.fi.pa165.vozovna.ejb.entity.ServiceInterval</class>
    <class>cz.muni.fi.pa165.vozovna.ejb.entity.Drive</class>
    <class>cz.muni.fi.pa165.vozovna.ejb.entity.User</class>
    <class>cz.muni.fi.pa165.vozovna.ejb.entity.Vehicle</class>
    <properties>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.connection.autocommit" value="false"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.DerbyDialect"/>
      <property name="hibernate.connection.username" value=""/>
      <property name="hibernate.archive.autodetection" value="class, hbm"/>
      <property name="hibernate.connection.driver_class" value="org.apache.derby.jdbc.EmbeddedDriver"/>
      <property name="hibernate.connection.password" value=""/>
      <property name="hibernate.connection.url" value="jdbc:derby:memory:VozovnaDB;create=true"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
    </properties>
  </persistence-unit>
  <persistence-unit name="EJBPU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>VozovnaDB</jta-data-source>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
