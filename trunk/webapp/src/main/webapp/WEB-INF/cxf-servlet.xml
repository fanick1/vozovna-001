<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://cxf.apache.org/jaxws 
	http://cxf.apache.org/schemas/jaxws.xsd">

	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />
	
	<bean id="userWS" class="cz.muni.fi.pa165.vozovna.ws.UserWebServiceImpl"/>
	<bean id="vehicleWS" class="cz.muni.fi.pa165.vozovna.ws.VehicleWebServiceImpl"/>
	
	<jaxws:endpoint 
	  id="userWebService" 
	  implementor="#userWS" 
	  address="/UserWebService" />

	<jaxws:endpoint 
	  id="vehicleWebService" 
	  implementor="#vehicleWS" 
	  address="/VehicleWebService" />
	  
	  <!-- Takto se da vyrobit bean klienta web service - muzeme ho potom nekam naautowirovat -->
	<jaxws:client id="helloClient"
                  serviceClass="cz.muni.fi.pa165.vozovna.ws.UserWebService"
                  address="http://localhost:8080/pa165/services/VehicleWebService" />
</beans>